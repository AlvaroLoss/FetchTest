<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorAccent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hiring_item_list_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hiring_item_list_id"
            app:layout_constraintBottom_toTopOf="@+id/hiring_item_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hiring_item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hiring_item_id"
            app:layout_constraintBottom_toTopOf="@+id/hiring_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hiring_item_list_id" />

        <TextView
            android:id="@+id/hiring_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hiring_item_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hiring_item_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>